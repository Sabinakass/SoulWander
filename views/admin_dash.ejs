<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Admin Dashboard</h1>
        <ul class="list-group mb-4">
            <% items.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= item.names.find(name => name.language === userLanguage).name  %></span>
                    <div>
                        <a href="/admin/editItem/<%= item._id %>" class="btn btn-primary mr-2">Edit</a>
                        <form action="/admin/deleteItem/<%= item._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
        <a href="/admin/addItem" class="btn btn-success">Add Item</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
